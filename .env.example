# Servidor VoxPro
PORT=3000
NODE_ENV=production

# Base de datos MySQL (en el mismo VPS)
DB_HOST=localhost
DB_PORT=3306
DB_USER=voxpro
DB_PASSWORD=your_secure_password
DB_NAME=voxpro

# Conexi√≥n SSH al servidor de grabaciones (Aware/Kraken)
AWARE_SSH_HOST=10.255.255.95
AWARE_SSH_PORT=22
AWARE_SSH_USER=tecnologia
AWARE_SSH_PASSWORD=
AWARE_SSH_KEY_PATH=
# Ruta base de grabaciones DENTRO del servidor Aware
AWARE_RECORDINGS_PATH=/media/tecnologia/STORAGE/GRABACIONES

# Aware PostgreSQL credentials (Group 1: Obama, Claro TYT)
AWARE_DB_USER_GROUP1=analista
AWARE_DB_PASS_GROUP1=your_aware_group1_password
# Aware PostgreSQL credentials (Group 2: Claro Hogar, Claro WCB)
AWARE_DB_USER_GROUP2=analista
AWARE_DB_PASS_GROUP2=your_aware_group2_password

# JWT - REQUIRED in production
JWT_SECRET=your_jwt_secret_here

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key

# CORS - allowed origin(s)
CORS_ORIGIN=https://your-domain.com

# Escaneo nocturno - hora en formato cron (default: 2:00 AM)
SCAN_CRON_SCHEDULE=0 2 * * *

# Logs
LOG_LEVEL=info
LOG_DIR=./logs
